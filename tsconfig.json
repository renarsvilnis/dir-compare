{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "types": ["node"],
    "lib": ["esnext"],
    "resolveJsonModule": true,

    /**
     * Make typscript stricter
     * https://codeburst.io/five-tips-i-wish-i-knew-when-i-started-with-typescript-c9e8609029db
     */
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    // Additional flags for hardcore mode
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    /**
     * Improve importing for older @type definiations of "export=" such as ip-regex
     * https://stackoverflow.com/a/51758340/1378261
     */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "files": [
    // "src/index.d.ts"
  ],
  "include": [
    "tests/**/*",
    "src/**/*",
    "package.json"
  ]
}
